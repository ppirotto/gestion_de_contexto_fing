    <sca:reference name="DroolsFeederService" multiplicity="0..1" promote="DroolsMessageComposerPollerBean/DroolsFeederService">
      <sca:interface.java interface="edu.fing.switchyard.Contextual_Data_Input.DroolsFeederService"/>
      <sca:binding.sca sy:target="ESBServiceDrools" sy:targetNamespace="urn:edu.fing.switchyard:CEP-Engine:1.0" name="sca13232"/>
    </sca:reference>
  </sca:composite>
</sy:switchyard>