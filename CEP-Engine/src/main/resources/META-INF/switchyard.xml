<?xml version="1.0" encoding="UTF-8"?>
<sy:switchyard xmlns:bean="urn:switchyard-component-bean:config:1.1" xmlns:http="urn:switchyard-component-http:config:1.1" xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912" xmlns:sy="urn:switchyard-config:switchyard:1.1" name="CEP-Engine" targetNamespace="urn:edu.fing.switchyard:CEP-Engine:1.0">
  <sca:composite name="CEP-Engine" targetNamespace="urn:edu.fing.switchyard:CEP-Engine:1.0">
    <sca:component name="DroolsFeederServiceBean">
      <bean:implementation.bean class="edu.fing.cep.engine.bean.DroolsFeederServiceBean"/>
      <sca:service name="DroolsFeederService">
        <sca:interface.java interface="edu.fing.cep.engine.bean.DroolsFeederService"/>
      </sca:service>
      <sca:reference name="DroolsManagerService">
        <sca:interface.java interface="edu.fing.cep.engine.bean.DroolsManagerService"/>
      </sca:reference>
    </sca:component>
    <sca:component name="DroolsManagerServiceBean">
      <bean:implementation.bean class="edu.fing.cep.engine.bean.DroolsManagerServiceBean"/>
      <sca:service name="DroolsManagerService">
        <sca:interface.java interface="edu.fing.cep.engine.bean.DroolsManagerService"/>
      </sca:service>
    </sca:component>
    <sca:service name="ESBServiceDrools" promote="DroolsFeederServiceBean/DroolsFeederService">
      <sca:interface.java interface="edu.fing.cep.engine.bean.DroolsFeederService"/>
      <sca:binding.sca name="CEP-SCA"/>
    </sca:service>
    <sca:component name="DroolsConfigServiceBean">
      <bean:implementation.bean class="edu.fing.cep.engine.bean.DroolsConfigServiceBean"/>
      <sca:service name="DroolsConfigService">
        <sca:interface.java interface="edu.fing.cep.engine.bean.DroolsConfigService"/>
      </sca:service>
      <sca:reference name="DroolsManagerService">
        <sca:interface.java interface="edu.fing.cep.engine.bean.DroolsManagerService"/>
      </sca:reference>
    </sca:component>
    <sca:service name="DroolsConfigService" promote="DroolsConfigServiceBean/DroolsConfigService">
      <sca:interface.java interface="edu.fing.cep.engine.bean.DroolsConfigService"/>
      <http:binding.http name="http1">
        <sy:operationSelector operationName="deployVersion"/>
        <http:contextPath>drools-config/deployVersion</http:contextPath>
      </http:binding.http>
      <http:binding.http name="http2">
        <sy:operationSelector operationName="updateActiveVersion"/>
        <http:contextPath>drools-config/updateActiveVersion</http:contextPath>
      </http:binding.http>
    </sca:service>
  </sca:composite>
</sy:switchyard>