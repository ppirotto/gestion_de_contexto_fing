<?xml version="1.0" encoding="ASCII"?>
<routes xmlns="http://camel.apache.org/schema/spring">
    <route>
        <from uri="switchyard://SetAdaptationService"/>
        <setHeader headerName="itinerary">
            <method ref="null" method="setItinerary" beanType="edu.fing.adaptation.gateway.model.Itinerary"></method>
        </setHeader>
        <log message="SetAdaptationService - message received: ${body} ${headers}"/>
        <to uri="switchyard://ItineraryServiceI"/>
        <log message="SetAdaptationService - response received: ${body}">
            <description>&lt;to uri="switchyard://AdaptationsService"/&gt;</description>
        </log>
    </route>
</routes>