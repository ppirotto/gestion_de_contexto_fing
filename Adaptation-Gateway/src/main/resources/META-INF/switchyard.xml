<?xml version="1.0" encoding="UTF-8"?>
<sy:switchyard xmlns:bean="urn:switchyard-component-bean:config:1.1" xmlns:camel="urn:switchyard-component-camel:config:1.1" xmlns:http="urn:switchyard-component-http:config:1.1" xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912" xmlns:soap="urn:switchyard-component-soap:config:1.1" xmlns:sy="urn:switchyard-config:switchyard:1.1" name="Adaptation-Gateway" targetNamespace="urn:edu.fing.switchyard:Adaptation-Gateway:1.0">
  <sca:composite name="Adaptation-Gateway" targetNamespace="urn:edu.fing.switchyard:Adaptation-Gateway:1.0">
    <sca:component name="SetAdaptations">
      <camel:implementation.camel>
        <camel:xml path="setAdaptations.xml"/>
      </camel:implementation.camel>
      <sca:service name="SetAdaptationService">
        <sy:interface.esb inputType="java.lang.String" outputType="java.lang.String"/>
      </sca:service>
      <sca:reference name="AdaptationsService">
        <sy:interface.esb inputType="java.lang.String" outputType="java.lang.String"/>
      </sca:reference>
      <sca:reference name="ItineraryService">
        <sca:interface.java interface="edu.fing.ItineraryService"/>
      </sca:reference>
    </sca:component>
    <sca:service name="SetAdaptationService" promote="SetAdaptations/SetAdaptationService">
      <sy:interface.esb inputType="java.lang.String" outputType="java.lang.String"/>
      <sca:binding.sca name="sca1"/>
      <http:binding.http name="httpRouting2">
        <http:contextPath>httpRouting2</http:contextPath>
      </http:binding.http>
    </sca:service>
    <sca:reference name="AdaptationsService" multiplicity="0..1" promote="SetAdaptations/AdaptationsService">
      <sy:interface.esb inputType="java.lang.String" outputType="java.lang.String"/>
      <sca:binding.sca sy:target="RoutingService" sy:targetNamespace="urn:edu.fing.switchyard:Adaptation-Manager:1.0" name="sca2"/>
    </sca:reference>
    <sca:component name="ItineraryServiceBean">
      <bean:implementation.bean class="edu.fing.switchyard.Adaptation_Gateway.bean.ItineraryServiceBean"/>
      <sca:service name="ItineraryService">
        <sca:interface.java interface="edu.fing.ItineraryService"/>
      </sca:service>
    </sca:component>
    <sca:service name="ItineraryService" promote="ItineraryServiceBean/ItineraryService">
      <sca:interface.java interface="edu.fing.ItineraryService"/>
      <sca:binding.sca name="sca2"/>
      <http:binding.http name="httpAdaptation">
        <sy:operationSelector operationName="receiveAdaptations"/>
        <http:contextPath>httpAdaptation</http:contextPath>
      </http:binding.http>
    </sca:service>
  </sca:composite>
</sy:switchyard>