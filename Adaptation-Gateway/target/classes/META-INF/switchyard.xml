<?xml version="1.0" encoding="UTF-8"?>
<sy:switchyard xmlns:sy="urn:switchyard-config:switchyard:1.1" xmlns:camel="urn:switchyard-component-camel:config:1.1" xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912" name="Adaptation-Gateway" targetNamespace="urn:edu.fing.switchyard:Adaptation-Gateway:1.0">
    <sca:composite name="Adaptation-Gateway" targetNamespace="urn:edu.fing.switchyard:Adaptation-Gateway:1.0">
        <sca:service name="SetAdaptationService" promote="SetAdaptations/SetAdaptationService">
            <sy:interface.esb inputType="java.lang.String" outputType="java.lang.String"/>
            <sca:binding.sca name="sca1"/>
        </sca:service>
        <sca:reference multiplicity="0..1" name="AdaptationsService" promote="SetAdaptations/AdaptationsService">
            <sy:interface.esb inputType="java.lang.String" outputType="java.lang.String"/>
            <sca:binding.sca name="sca2" sy:target="RoutingService" sy:targetNamespace="urn:edu.fing.switchyard:Adaptation-Manager:1.0"/>
        </sca:reference>
        <sca:component name="SetAdaptations">
            <camel:implementation.camel>
                <camel:xml path="setAdaptations.xml"/>
            </camel:implementation.camel>
            <sca:service name="SetAdaptationService">
                <sy:interface.esb inputType="java.lang.String" outputType="java.lang.String"/>
            </sca:service>
            <sca:reference name="AdaptationsService">
                <sy:interface.esb inputType="java.lang.String" outputType="java.lang.String"/>
            </sca:reference>
        </sca:component>
    </sca:composite>
</sy:switchyard>
